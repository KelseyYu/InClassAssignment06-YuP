<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mac.inclassassignment06_yup.MainActivity">

    <EditText
        android:id="@+id/car_brand_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Car Brand"
        android:padding="16dp"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/color_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Color"
        android:paddingLeft="16dp"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/hasSunroof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Has sunroof?"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/information_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="More Information"
        android:paddingLeft="16dp"
        android:textSize="20sp" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="submit"
        android:padding="16dp"
        android:text="submit"
        android:textSize="20sp" />

</LinearLayout>
